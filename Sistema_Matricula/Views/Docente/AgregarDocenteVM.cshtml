@model Sistema_Matricula.ViewsModels.RegistroDocenteViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>

    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

</head>
<body style="align-content:start; margin-left:280px; margin-top:20px; background:#E5E5E5">
    <h4>Registro de Docente</h4>
    <hr />

    <div style="background:white; width:70rem; height:45rem; border-radius:15px" class="w-full">
        <div class="container mt-5">
            <form asp-action="AgregarDocenteVM" method="post" class="w-full mb-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="md:flex md:items-center mb-6">

                    <div class="md-6">
                        <h4>
                            DATOS DE DOCENTE
                        </h4>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="Nombre" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                            <input asp-for="Nombre" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="Apellido" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                            <input asp-for="Apellido" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="Edad" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                            <input asp-for="Edad" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="Edad" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="Sexo" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Sexo</label>
                            <select asp-for="Sexo" class="form-control" asp-items="ViewBag.Sexo">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="Telefono" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Telefono</label>
                            <input asp-for="Telefono" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="FechNacimiento" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Fecha de Nacimiento</label>
                            <input asp-for="FechNacimiento" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="date" />
                            <span asp-validation-for="FechNacimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IdEspecialidad" class="control-label"></label>
                            <select asp-for="IdEspecialidad" class="form-control" asp-items="ViewBag.Especialidad">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="IdEspecialidad" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- Segunda Sección -->
                    <div class="col-md-4 ml-6">
                        <h4 class="ml-4">
                            DATOS DE USUARIO
                        </h4>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="NombreUsuario" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Nombre Usuario</label>
                            <input asp-for="NombreUsuario" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="EmailUsuario" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Email</label>
                            <input asp-for="EmailUsuario" type="email"  class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="EmailUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <label asp-for="PasswordHash" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Contraseña</label>
                            <input asp-for="PasswordHash" type="password" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group w-full  px-3 mb-6 md:mb-0">
                            <input type="submit" value="Registrar" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            </form>
            <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
        </div>
    </div>
    
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}