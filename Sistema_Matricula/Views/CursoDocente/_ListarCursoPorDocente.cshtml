@model IEnumerable<Sistema_Matricula.ViewsModels.CursoDocenteViewModel>

@{
    ViewData["Title"] = "ListarCursoPorDocente";
}

<head>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
</head>

<div id="cursoyaAsignado">
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
            Observación
        </div>
        <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
            @TempData["Error"]
        </div>
    }
</div>

<div id="exitoAsignacion">
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-500 text-white font-bold rounded-t px-4 py-2">
            Curso asignado
        </div>
        <div class="border border-t-0 border-green-400 rounded-b bg-green-100 px-4 py-3 text-green-700">
            @TempData["Success"]
        </div>
    }
</div>

<div class="layout-content-container flex flex-col w-full flex-1">
    <div class="px-4 py-3 container">
        <div class="flex flex-wrap -mx-2 items-center w-full overflow-hidden rounded-xl border border-[#D5D6DD] bg-[#F9FAFA]">
            @foreach (var item in Model)
            {
                <div class="w-full sm:w-1/2 md:w-1/3 px-2 mb-4">
                    <div class="p-4 rounded-lg bg-white text-center text-surface shadow-secondary-1 dark:bg-surface-dark dark:text-white curso-docente" data-id="@item.IdCursoDocente">
                        <div class="p-6">
                            <h5 class="mb-2 text-xl font-medium leading-tight">
                                @item.IdCursoDocente
                            </h5>
                            <p class="mb-4 text-base">
                                @item.NombreCurso
                            </p>
                            <a data-id="@item.IdCursoDocente" class="eliminar-curso-asignado flex items-center justify-center w-auto text-[#212141] bg-red-400 px-2 py-2 rounded hover:bg-red-500 transition-colors duration-300 no-underline">
                                <span class="material-symbols-outlined text-white text-xxl pt-0">
                                    delete_forever
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

