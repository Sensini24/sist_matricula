@model Sistema_Matricula.ViewsModels.RegistroEstudianteViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title>

    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    </head>
<body style="align-content:start; margin-left:280px; margin-top:20px; background:#E5E5E5">
    <h4>Registro de Estudiante</h4>
    <hr />
    <div class="container">
        <form asp-action="RegistrarUsuario" method="post" class="w-full mb-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="md:flex md:items-center mb-6">

                <div class="md-4">
                    <h4>
                        DATOS DE ESTUDIANTE
                    </h4>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Nombre" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Nombre" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Apellido" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Apellido" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="SexoEstudiante" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Sexo</label>
                        <input asp-for="SexoEstudiante" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="SexoEstudiante" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="FechNacimiento" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Fecha de Nacimiento</label>
                        <input asp-for="FechNacimiento" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="date" />
                        <span asp-validation-for="FechNacimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Direccion" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Direccion" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Dni" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Dni" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>
                </div>
                <!-- Segunda Sección -->
                <div class="col-md-4 ml-5">
                    <h4 class="ml-4">
                        DATOS DE APODERADO
                    </h4>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="NombreApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Nombre de Apoderado</label>
                        <input asp-for="NombreApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="NombreApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="ApellidoApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Apellido de Apoderado</label>
                        <input asp-for="ApellidoApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="ApellidoApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
