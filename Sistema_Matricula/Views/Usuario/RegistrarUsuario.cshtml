@model Sistema_Matricula.ViewsModels.RegistroEstudianteViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title>

    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    </head>
<body style="align-content:start; margin-left:230px; background:#f4f6fa;">
    
    <div class="filter-container p-4 bg-white w-full rounded-4 p-4 shadow-md mt-4" style="width: 110%">
        <h4>Registro de Estudiante</h4>
        <hr />
        <form asp-action="RegistrarUsuario" method="post" class="w-full mb-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="md:flex md:items-center">

                <div class="md-4 mb-5">
                    <h4>
                        DATOS DE ESTUDIANTE
                    </h4>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Nombre" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Nombre" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Apellido" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Apellido" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="SexoEstudiante" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Sexo</label>
                        <input asp-for="SexoEstudiante" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="SexoEstudiante" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="FechNacimiento" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Fecha de Nacimiento</label>
                        <input asp-for="FechNacimiento" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="date" />
                        <span asp-validation-for="FechNacimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Direccion" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Direccion" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Dni" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Dni" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Dni" class="text-danger"></span>
                    </div>
                </div>
                <!-- Segunda Sección -->
                <div class="col-md-4 ml-5 mt-5">
                    <h4 class="ml-4">
                        DATOS DE APODERADO
                    </h4>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="NombreApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Nombre de Apoderado</label>
                        <input asp-for="NombreApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="NombreApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="ApellidoApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Apellido de Apoderado</label>
                        <input asp-for="ApellidoApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="ApellidoApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="FechNacimientoApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Fecha de Nacimiento</label>
                        <input asp-for="FechNacimientoApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="date" />
                        <span asp-validation-for="FechNacimientoApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Sexo" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <select asp-for="Sexo" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" asp-items="ViewBag.Sexo">
                            <option value="">-- Seleccione su sexo --</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Ocupacion" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Ocupacion" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Ocupacion" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="TelefonoApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Teléfono</label>
                        <input asp-for="TelefonoApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="TelefonoApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="DireccionApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Dirección</label>
                        <input asp-for="DireccionApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="DireccionApoderado" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tercera Sección -->
                <div class="col-md-4">
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="Parentesco" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Parentesco con Apoderado</label>
                        <input asp-for="Parentesco" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Parentesco" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="NombreUsuario" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="NombreUsuario" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="EmailUsuario" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Email</label>
                        <input asp-for="EmailUsuario" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="email" />
                        <span asp-validation-for="EmailUsuario" class="text-danger"></span>
                    </div>

                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="PasswordHash" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Contraseña</label>
                        <input asp-for="PasswordHash" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="password" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <input type="submit" value="Registrar" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded ml-5  " />
                    </div>
                </div>
            </div>
        </form>
        <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    </div>

    </body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}