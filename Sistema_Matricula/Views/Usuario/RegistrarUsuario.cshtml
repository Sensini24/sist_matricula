                        <span asp-validation-for="FechNacimientoApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Sexo" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <select asp-for="Sexo" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" asp-items="ViewBag.Sexo">
                            <option value="">-- Seleccione su sexo --</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full  px-3 mb-6 md:mb-0">
                        <label asp-for="Ocupacion" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="Ocupacion" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Ocupacion" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="TelefonoApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Teléfono</label>
                        <input asp-for="TelefonoApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="TelefonoApoderado" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="DireccionApoderado" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Dirección</label>
                        <input asp-for="DireccionApoderado" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="DireccionApoderado" class="text-danger"></span>
                    </div>
                </div>

                <!-- Tercera Sección -->
                <div class="col-md-4">
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="Parentesco" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Parentesco con Apoderado</label>
                        <input asp-for="Parentesco" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="Parentesco" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="NombreUsuario" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                        <input asp-for="NombreUsuario" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="EmailUsuario" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Email</label>
                        <input asp-for="EmailUsuario" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="email" />
                        <span asp-validation-for="EmailUsuario" class="text-danger"></span>
                    </div>

                    <div class="form-group w-full px-3 mb-6 md:mb-0">
                        <label asp-for="PasswordHash" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Contraseña</label>
                        <input asp-for="PasswordHash" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="password" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <input type="submit" value="Registrar" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded ml-5  " />
                    </div>
                </div>
            </div>
        </form>
