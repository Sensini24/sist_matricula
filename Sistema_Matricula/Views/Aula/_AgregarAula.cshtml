@model Sistema_Matricula.Models.Aula

@{
    ViewData["Title"] = "_AgregarAula";
}

<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
        <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/5hb5gLl1PLTT3/rxxqOWP5PlJp/5hb5gLl1PLTT3r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    </head>
    <body>
    <h4>Aula</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AgregarAula" id="formAula" class="col-md-12 flex">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                <div class="form-group col-md-6">
                    <label asp-for="Capacidad" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                    <input asp-for="Capacidad" id="capacidadValor" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>

                    <label asp-for="VacantLibres" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                    <input asp-for="VacantLibres" id="vacantesValor" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" readonly/>
                    <span asp-validation-for="VacantLibres" class="text-danger"></span>
                </div>


                <div class="form-group col-md-6 mt-4">
                    <div class="flex">
                        <select id="nivelSelect" class="filter-select mb-2 md:mb-0 appearance-none block w-50 bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white ml-5" id="filter-course" asp-items="ViewBag.Niveles">
                            <option value="">Seleccionar Nivel</option>
                        </select>
                        <select id="gradoSelect" class="filter-select mb-2 md:mb-0 appearance-none block w-50 bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white ml-5" id="filter-level">
                            <option value="">Seleccionar Grado</option>
                        </select>
                    </div>
                    <label asp-for="IdSeccion" class="control-label block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2 ml-2"></label>
                    <select asp-for="IdSeccion" id="seccionSelect" class="form-control appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white ml-2">
                        <option value="">-- Seleccione una Seccion --</option>
                    </select>
                    <span asp-validation-for="IdSeccion" class="text-danger"></span>

                    <input type="submit" value="Nueva Aula" class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded ml-5" />
                </div>
            </form>
        </div>
    </div>

    <style>
        body {
            margin-left: 120px;
        }
    </style>
    </body>
</html>
<script>
    
</script>
