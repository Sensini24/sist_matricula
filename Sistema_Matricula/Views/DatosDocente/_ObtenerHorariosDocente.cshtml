@model IEnumerable<Sistema_Matricula.ViewsModels.HorarioDocenteViewModel>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>

    <link rel="icon" type="image/x-icon" href="data:image/x-icon;base64," />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"></script>

    </head>
    <body>
    
        <div class="bg-[#14213d] rounded-lg ">
        
            <div class="flex justify-content-between">
                <div class=" container flex mt-3">
                    <input type="text" name="palabra" placeholder="Nombre Curso..." class="form-control appearance-none block w-60 bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white">
                    <button type="submit" value="Buscar" id="cargar" class="bg-[#FFFFFF] hover:bg-blue-400 text-black font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded ml-2 h-14">
                        <span class="material-symbols-outlined">
                            search
                        </span>
                    </button>
                </div>
            

                <select name="estado" id="estados" class="mr-4 bg-[#FFFFFF] text-[#14213D] mt-2 rounded-xl">
                    <option value="">Filtrar por Estado</option>
                    <option value="Todos">Todos</option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                    <option value="Pendiente">Pendiente</option>
                </select>
            </div>
                <div class="px-4 py-3 container w-full">
                    <div class="overflow-x-auto rounded-xl border border-[#D5D6DD] bg-[#F9FAFA]">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-[#FCA311]">
                                <tr>
                                    <th class="px-4 py-3 text-left text-[#FFFFFF] text-sm font-medium leading-normal">Curso</th>
                                    <th class="px-4 py-3 text-left text-[#FFFFFF] text-sm font-medium leading-normal">Dia Semana</th>
                                    <th class="px-4 py-3 text-left text-[#FFFFFF] text-sm font-medium leading-normal">Hora Inicio</th>
                                    <th class="px-4 py-3 text-left text-[#FFFFFF] text-sm font-medium leading-normal">Hora Fin</th>
                            <th class="px-4 py-3 text-left text-[#FFFFFF] text-sm font-medium leading-normal">Lugar</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                            @Html.DisplayFor(modelItem => item.Curso)
                                        </td>
                                        <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                            @Html.DisplayFor(modelItem => item.DiaSemana)
                                        </td>
                                        <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                            @Html.DisplayFor(modelItem => item.HoraInicio)
                                        </td>
                                        <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                            @Html.DisplayFor(modelItem => item.HoraFin)
                                        </td>
                                        <td class="h-[72px] px-4 py-2 text-sm font-normal leading-normal">
                                            @item.Grado  /@item.Nivel  /@item.Seccion
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                </div>
            
        </div>
        


    </body>
</html>

</div>