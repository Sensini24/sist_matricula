@using System.Security.Claims
<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title>Dashboard Docente</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    </head>
    <body class="bg-gray-100 p-10 " style="align-content:start; margin-left:215px; margin-top:40px; background:#f4f6fa">
    <div class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen p-8 rounded-2xl">
        <div class="max-w-7xl mx-auto">
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-8">
                <div class="px-8 py-12">
                    <h1 class="text-4xl font-extrabold text-gray-900 leading-tight mb-2">
                        Hola de vuelta, <span class="text-indigo-600">@User.Identity.Name</span>
                    </h1>
                    <p class="text-xl text-indigo-600">
                        @User.FindFirst(ClaimTypes.Role)?.Value
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="p-8">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Cursos que dictas</h2>
                        <p id="cursos-dictados" class="text-3xl font-bold text-indigo-600"></p>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="p-8">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Alumnos</h2>
                        <p id="alumnos" class="text-3xl font-bold text-indigo-600"></p>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="p-8">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Secciones</h2>
                        <p id="secciones" class="text-3xl font-bold text-indigo-600"></p>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="p-8">
                        <h2 class="text-lg font-semibold text-gray-700 mb-2">Turnos de dictado</h2>
                        <p id="turnos" class="text-3xl font-bold text-indigo-600"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>
<script>
    var cursosDictados =  document.getElementById('cursos-dictados');
    var alumnos = document.getElementById('alumnos');
    var secciones = document.getElementById('secciones');
    var turnos = document.getElementById('turnos');

    fetch('CantidadEstudiantes')
    .then(response => response.json())
    .then(data => {
        console.log(data);
        alumnos.innerHTML = data;
    });

    fetch('CantidadCursos')
    .then(response => response.json())
    .then(data => {
        console.log(data);
        cursosDictados.innerHTML = data;
    });


    fetch('CantidadSecciones')
    .then(response => response.json())
    .then(data => {
        console.log(data);
        secciones.innerHTML = data;
    });

    fetch('CantidadDeHorarios')
    .then(response => response.json())
    .then(data => {
        console.log(data);
        turnos.innerHTML = data;
    });

</script>