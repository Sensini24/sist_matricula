@model Sistema_Matricula.Models.Matricula

<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
        <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/5hb5gLl1PLTT3/rxxqOWP5PlJp/5hb5gLl1PLTT3r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    
    </head>
<body style="align-content:start; margin-left:280px; margin-top:20px; background:#E5E5E5">

    <div class="filter-container p-4 bg-white w-full rounded-4 p-4 shadow-md" style="width: 110%">

    <h4>Matricula</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditarMatricula">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdMatricula" class="control-label"></label>
                    <input asp-for="IdMatricula" class="form-control" readonly />
                    <span asp-validation-for="IdMatricula" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdNivel" class="control-label"></label>
                    <input asp-for="IdNivel" class="form-control" />
                    <span asp-validation-for="IdNivel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdGrado" class="control-label"></label>
                    <input asp-for="IdGrado" class="form-control" />
                    <span asp-validation-for="IdGrado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdSeccion" class="control-label"></label>
                    <input asp-for="IdSeccion" class="form-control" />
                    <span asp-validation-for="IdSeccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdPeriodEscolar" class="control-label"></label>
                    <input asp-for="IdPeriodEscolar" class="form-control" />
                    <span asp-validation-for="IdPeriodEscolar" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdEstudiante" class="control-label"></label>
                    <input asp-for="IdEstudiante" class="form-control" />
                    <span asp-validation-for="IdEstudiante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdMonto" class="control-label"></label>
                    <input asp-for="IdMonto" class="form-control" />
                    <span asp-validation-for="IdMonto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechMatricula" class="control-label"></label>
                    <input asp-for="FechMatricula" class="form-control" />
                    <span asp-validation-for="FechMatricula" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    </div>
    </body>
</html>