                <a class="nav-link text-dark" asp-area="" asp-controller="Grado" asp-action="ListarGrado">
                    <!--<a class="nav-link text-dark" asp-area="" asp-controller="Especialidad" asp-action="ListarEspecialidad">-->
                    <span class="material-symbols-outlined">
                        groups
                    </span>Estudiantes
                </a>
            </li>
            <li>
                <a href="">
                    <span class="material-symbols-outlined">
                        move_up
                    </span>Transfer
                </a>
            </li>
            <h4>
                <span>Account</span>
                <div class="menu-separator"></div>
            </h4>
            <li>
                <a href="">
                    <span class="material-symbols-outlined">
                        lab_profile
                    </span>Reports
                </a>
            </li>
            <li>
                <a href="">
                    <span class="material-symbols-outlined">
                        notifications
                    </span>Notifications
                </a>
            </li>
            <li>
                <a href="">
                    <span class="material-symbols-outlined">
