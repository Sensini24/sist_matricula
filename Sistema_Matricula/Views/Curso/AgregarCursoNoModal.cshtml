@model Sistema_Matricula.Models.Curso
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="" />
    <link rel="stylesheet"
          as="style"
          onload="this.rel='stylesheet'"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />


    <title></title>
    <link rel="icon" type="image/x-icon" href="data:image/x-icon;base64," />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5/5hb5gLl1PLTT3/rxxqOWP5PlJp/5hb5gLl1PLTT3r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</head>
<body style="align-content:start; margin-left:280px; margin-top:20px; background:#E5E5E5">
    <h4>Curso</h4>
    <hr />

    <form asp-controller="Curso" asp-action="ListarCurso" method="get" class="ml-6" id="formEstudiantes">
        <p>
            <div class="flex">
                <input type="text" name="palabra" placeholder="Nombre...">
                <input type="number" name="codigo" placeholder="Código..."><br />
                <button type="submit" value="Buscar" id="cargar" class="bg-[#FFFFFF] hover:bg-blue-400 text-black font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded ml-2">
                    <span class="material-symbols-outlined">
                        search
                    </span>
                </button>
            </div>


            <select name="estado" id="estados" class="mr-4 bg-[#FFFFFF] text-[#14213D] mt-2 rounded-xl">
                <option value="">Filtrar por Estado</option>
                <option value="Todos">Todos</option>
                <option value="Activo">Activo</option>
                <option value="Inactivo">Inactivo</option>
                <option value="Pendiente">Pendiente</option>
            </select>

        </p>
    </form>
    <div class="ml-6">
        <form asp-action="AgregarCursoNoModal" class="bg-white p-4 rounded-xl shadow-md">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <div class="form-group mb-4">
                <input type="text" name="palabra" placeholder="Nombre...">
                <label asp-for="Nombre" class="block text-gray-700 font-bold mb-2"></label>
                <input asp-for="Nombre" class="form-control bg-gray-100 border border-gray-300 rounded py-2 px-4" />
                <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
            </div>
            <div class="form-group flex justify-end">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Create
                </button>
            </div>
        </form>
    </div>

    <div id="lista-cursos">

    </div>
    </body>
</html>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var listaCursos = document.getElementById('lista-cursos');
        fetch('ListarCurso').
        then(response=>response.text()).
            then(html => {
                console.log("datos obtneidos")
                listaCursos.innerHTML = html;
            });
    })
</script>


